""""
                if self.play_button_rect.collidepoint(x, y):
                        self.start_screen = False

                elif self.hs_button_rect.collidepoint(x, y) and self.hs_button:
                        self.play_button = False
                        self.hs_button = False
                        self.hs_show = True
                        self.back_button = True
                    elif self.back_button_rect.collidepoint(x, y) and self.back_button:
                        self.play_button = True
                        self.hs_button = True
                        self.hs_show = False
                        self.back_button = False
""""





          elif event.type == pg.KEYDOWN and self.new_scene_buffer:
                if event.key == pg.K_p:
                    print("Pause game")
                    self.pause()
                elif event.key == pg.K_LEFT:
                    self.last_key = 'left'
                    print("left was inputted.")
                elif event.key == pg.K_RIGHT:
                    self.last_key = 'right'
                    print("right was inputted.")
                elif event.key == pg.K_UP:
                    self.last_key = 'up'
                    print("up was inputted.")
                elif event.key == pg.K_DOWN:
                    self.last_key = 'down'
                    print("down was inputted.")
                elif event.key == pg.K_z:
                    #self.portal1.fire()
                    print("z was inputted.")
                elif event.key == pg.K_x:
                    #self.portal2.fire()
                    print("x was inputted.")